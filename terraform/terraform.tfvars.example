## REQUIRED SECRETS ##

############
# IMP. The below secrets/tokens/apis should not be stored in version control
############
# SendGrid API is required only if enable_sendgrid is true
sendgrid_api   = "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

## REQUIRED ##
region    = "us-west-2"
# domain is required only if use_route53 is true
domain    = "example.com"
timezone  = "Europe/Amsterdam"
auth_user = "admin"
site_url  = "app.example.com"

# SMTP Configuration
enable_smtp = true
smtp_host = "smtp.example.com"
smtp_port = 587
smtp_user = "your-smtp-username"
smtp_password = "your-smtp-password"
smtp_admin_user = "admin@example.com"
smtp_sender_name = "Your Name"

# Email Configuration
enable_email_autoconfirm = false  # Set to true to automatically confirm email addresses during signup

# GitHub OAuth Configuration
enable_github_oauth = false
github_client_id = "your-github-client-id"
github_client_secret = "your-github-client-secret"

# Enable or disable Let's Encrypt staging environment
use_letsencrypt_staging = false  # Set to true to use Let's Encrypt staging environment (useful for testing)

